<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/main_view_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.viewpager.widget.ViewPager>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="70dp"
        android:clickable="true"
        android:src="@drawable/main_icon"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/lime"
        app:rippleColor="@color/gray" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/summary_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="140dp"
        android:clickable="true"
        android:visibility="visible"
        android:src="@drawable/summary_infor_icon"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/lime"
        app:rippleColor="@color/gray" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/goods_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="210dp"
        android:clickable="true"
        android:visibility="visible"
        android:src="@drawable/goods_infor_icon"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/lime"
        app:rippleColor="@color/gray" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/scan_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="140dp"
        android:clickable="true"
        android:visibility="visible"
        android:src="@drawable/scan_icon"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/lime"
        app:rippleColor="@color/gray" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/search_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="210dp"
        android:clickable="true"
        android:visibility="visible"
        android:src="@drawable/search_icon"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/lime"
        app:rippleColor="@color/gray" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/upload_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="210dp"
        android:clickable="true"
        android:visibility="visible"
        android:src="@drawable/upload_data_icon"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/lime"
        app:rippleColor="@color/gray" />


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/download_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_marginEnd="160dp"
        android:layout_marginBottom="140dp"
        android:clickable="true"
        android:visibility="visible"
        android:src="@drawable/download_data_icon"
        android:scaleType="fitCenter"
        android:backgroundTint="@color/lime"
        app:rippleColor="@color/gray" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>