<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/goods_update_infor_guidline1"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.9"
        android:layout_width="0dp"
        android:layout_height="0dp">
    </androidx.constraintlayout.widget.Guideline>
    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/goods_update_infor_guidline1">
        <LinearLayout
            android:background="@color/colorPrimary"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/goods_update_infor_guidline1">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/goods_update_infor_guidline2"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.9"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </androidx.constraintlayout.widget.Guideline>
                <LinearLayout
                    android:orientation="vertical"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/goods_update_infor_guidline2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:text="Mã Hàng"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </TextView>
                    <EditText
                        android:id="@+id/goods_add_goods_id"
                        android:gravity="center"
                        android:text=""
                        android:textSize="20dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    </EditText>
                </LinearLayout>

                <Button
                    android:id="@+id/goods_add_scan_bt"
                    android:src="@android:drawable/ic_menu_camera"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/goods_update_infor_guidline2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_width="0dp"
                    android:layout_height="0dp">
                </Button>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:textStyle="bold"
                android:background="@color/white"
                android:textSize="20dp"
                android:text="Loại Hàng Hóa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:background="@color/white"
                android:id="@+id/goods_add_type"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>

            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Người Gửi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:id="@+id/goods_add_sender_name"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            <EditText
                android:id="@+id/goods_add_sender_phone"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            <EditText
                android:id="@+id/goods_add_sender_address"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            <EditText
                android:id="@+id/goods_add_sender_date"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>


            <TextView
                android:textStyle="bold"
                android:background="@color/white"
                android:textSize="20dp"
                android:text="Người Nhận"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:background="@color/white"
                android:id="@+id/goods_add_receiver_name"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            <EditText
                android:background="@color/white"
                android:id="@+id/goods_add_receiver_phone"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            <EditText
                android:background="@color/white"
                android:id="@+id/goods_add_receiver_address"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            <EditText
                android:background="@color/white"
                android:id="@+id/goods_add_receiver_date"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>

            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Trạng Thái"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <Spinner
                android:id="@+id/goods_add_sts"
                android:background="@android:drawable/btn_dropdown"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="@+id/money_report_guid01"
                app:layout_constraintEnd_toEndOf="@+id/money_report_guid02"
                android:spinnerMode="dropdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </Spinner>

            <TextView
                android:background="@color/colorSecondaryLight"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Số Kiện"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:background="@color/colorSecondaryLight"
                android:id="@+id/goods_add_goods_quantity"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>

            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Số Tiền Phải Thu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:id="@+id/goods_add_money"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>

            <TextView
                android:background="@color/white"
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Giá Trị Hàng"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:background="@color/white"
                android:id="@+id/goods_add_goods_price"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>

            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:text="Ghi Chú"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </TextView>
            <EditText
                android:id="@+id/goods_add_goods_notes"
                android:gravity="center"
                android:text=""
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>


        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:background="@color/colorSecondaryLight"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/goods_update_infor_guidline1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:textSize="12dp"
            android:id="@+id/goods_add_clear_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Xóa ">
        </Button>

        <Button
            android:textSize="12dp"
            android:id="@+id/goods_add_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Hoàn Thành">
        </Button>


        <Button
            android:textSize="12dp"
            android:id="@+id/goods_add_close_bt"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="      Đóng     ">
        </Button>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>